import tkinter as tk
from tkinter import simpledialog
from tkinter import *


GUI = tk.Tk()
GUI.geometry("800x700")
GUI.resizable(False, False)
GUI.title("Speed Typing Test")


GUI = tk.Text(GUI, height=10, width=60)
GUI.pack()
GUI.insert(tk.END, "This is a speed typing test. ")
GUI.insert(tk.END, "To play, copy the sentence     given.")


First_Typing_Input = simpledialog.askstring(title="Speed Typing Test Sentence: ",
                                            prompt=" A few days after he applied for the program, he got a email saying he made it.")


GUI.mainloop()
